<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card_bg"
    android:padding="16dp"
    android:layout_marginVertical="6dp">

    <TextView
        android:id="@+id/tvLeaderEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Leader Email"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvLeaderTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Team Leader)"
        android:textStyle="italic"
        android:textColor="@color/green_primary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvLeaderEmail"
        app:layout_constraintStart_toStartOf="@id/tvLeaderEmail"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
